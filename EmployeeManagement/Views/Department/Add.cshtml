@model Department
@{
    ViewData["Titlephrase"]="Add Department";
}
<h3>Add New Department</h3>
<hr>
<form   asp-controller="Department" asp-action="Add" method="POST">
  <div class="form-group">
    <label asp-for="Id"></label>
    <input type="text" class="form-control" asp-for="Id" placeholder="Enter Id">
  </div>
  <div class="form-group">
    <label asp-for="Name"></label>
    <input type="text" class="form-control" asp-for="Name"  placeholder="Enter Name">
  </div>
  <div class="form-group">
    <label asp-for="code"></label>
    <textarea class="form-control" asp-for="code"  placeholder="Enter Code"></textarea>
  </div>

  <div class="form-group">
    <label asp-for="Description"></label>
    <input type="text" class="form-control" asp-for="Description" placeholder="Enter Description">
  </div>
  <div class="form-group">
    <label asp-for="StartDate"></label>
    <input type="date" class="form-control" placeholder="StartDate" asp-for="StartDate" />
  </div>

  
  <button type="submit" class="btn btn-primary">Save Departments</button>
</form>