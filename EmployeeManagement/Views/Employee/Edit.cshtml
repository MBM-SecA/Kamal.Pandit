@model Person
@{
    ViewData["Titlephrase"]="Add Employee";
    string[] genders = {"Male", "Female", "others"};
}
<h3>Update Employee</h3>
<hr>
<form   asp-controller="Employee" asp-action="Edit" method="POST">
  <div class="form-group">
    <label asp-for="FirstName"></label>
    <input type="text" class="form-control" asp-for="FirstName" placeholder="Enter First Name">
  </div>
  <div class="form-group">
    <label asp-for="LastName"></label>
    <input type="text" class="form-control" asp-for="LastName"  placeholder="Enter Last Name">
  </div>
  <div class="form-group">
    <label asp-for="Address"></label>
    <textarea class="form-control" asp-for="Address"  placeholder="Enter Address"></textarea>
  </div>
  <div class="form-group">
    <label asp-for="Gender"></label><br>
    @foreach (var gender in genders)
    {
      <input type="radio" id="@gender" name="gender" value="@gender[0]">
      <label for="@gender">@gender</label><br>
    }
  </div>
  <div class="form-group">
    <label asp-for="Salary"></label>
    <input type="number" class="form-control" asp-for="Salary" placeholder="Enter Salary">
  </div>

  
  <button type="submit" class="btn btn-primary">Update Employee</button>
</form>