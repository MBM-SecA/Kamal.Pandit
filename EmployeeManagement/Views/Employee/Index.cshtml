@model List<Person>
@{
    ViewData["Titlephrase"] = "List";
}

<h1>All Employees (@Model.Count)</h1>
<table class="table background-dark">
  <thead class="thead-light">
    <tr>
      <th scope="col">#</th>
      <th scope="col">FirstName</th>
      <th scope="col">LastName</th>
      <th scope="col">Address</th>
      <th scope="col">Gender</th>
      <th scope="col">Salary</th>
    </tr>
  </thead>
  <tbody>
    @{int i=0;}
     @foreach (var employee in Model)
     {
       <tr scope ="row">
         <td>@(++i)</td>
         
        <td><a href="/employee/detail?Id=@employee.Id">@employee.FirstName</a></td>
         
         <td>@employee.LastName</td>
         <td>@employee.Address</td>
         <td>@employee.Gender</td>
         <td>@employee.Salary</td>
          <td>
          <a asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.Id">
            <button type="button" class="btn btn-outline-info">
              Edit
            </button>
          </a>
        </td>
        <td>
          <a asp-controller="Employee" asp-action="Delete" asp-route-id="@employee.Id">
            <button type="button" class="btn btn-outline-danger">
              Delete
            </button>
          </a>
        </td>

       </tr>
         
     }
  </tbody>
</table>
